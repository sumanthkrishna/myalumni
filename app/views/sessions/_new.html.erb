
  <div id="account_form">
    <% form_tag session_path do -%>
      <%= label_tag 'Username' %>
      <%= text_field_tag 'username', @username, {:class=>"registration", :type=>"text", :size=>"30"} %>
      <%= label_tag 'Password' %>
      <%= password_field_tag 'password', nil, {:class=>"registration", :type=>"text", :size=>"30"} %>
      <%= submit_tag 'Log in', {:class => 'button'} %>
   <% end -%>
 </div>
