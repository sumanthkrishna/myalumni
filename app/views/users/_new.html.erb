<h2>Step 1: <br />Input Your Personal Info</h2>
  <div id="account_form">
    <%= error_messages_for :user %><br/>
      <% form_for :user, :url => users_path do |f| -%>
          <%= label_tag 'Username' %>
          <%= f.text_field :username, {:class=>"registration", :type=>"text", :size=>"30"}%>
          <%= label_tag 'Email' %>
          <%= f.text_field :email, {:class=>"registration", :type=>"text", :size=>"30"} %>
          <%= label_tag 'Password' %>
          <%= f.password_field :password, {:class=>"registration", :type=>"text", :size=>"30"} %>
          <%= label_tag 'password_confirmation', 'Confirm Password' %>
          <%= f.password_field :password_confirmation, {:class=>"registration", :type=>"text", :size=>"30"} %>
          <%= submit_tag 'Register', {:class=>"button"} %>
      <% end -%>
  </div>
